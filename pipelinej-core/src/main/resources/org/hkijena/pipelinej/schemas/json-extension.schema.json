{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://applied-systems-biology.github.io/acaq5/schemas/trait.schema.json",
    "type": "object",
    "title": "Extension",
    "description": "An extension that can be put into the ImageJ plugin folder",
    "required": [
        "id",
        "version",
        "metadata",
        "algorithms"
    ],
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "string",
            "title": "ID",
            "description": "Unique ID of this extension. Should have format <groupId>.<artifactId>:<extensionId>",
            "default": "",
            "examples": [
                "org.hkijena.acaq5:image-traits"
            ]
        },
        "version": {
            "$id": "#/properties/version",
            "type": "string",
            "title": "Version",
            "description": "Version of this extension",
            "default": "",
            "examples": [
                "1.0.0"
            ]
        },
        "metadata": {
            "$id": "#/properties/metadata",
            "type": "object",
            "title": "Extension metadata",
            "description": "General metadata about the extension",
            "$ref": "https://applied-systems-biology.github.io/acaq5/schemas/metadata.schema.json"
        },
        "algorithms": {
            "$id": "#/properties/algorithms",
            "type": "array",
            "title": "Algorithms",
            "description": "List of added algorithms",
            "default": [],
            "items": {
              "$ref": "https://applied-systems-biology.github.io/acaq5/schemas/algorithm.schema.json"
            }
        }
    }
}
