{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://www.jipipe.org/schemas/data-table.schema.json",
  "type": "object",
  "title": "Data table",
  "description": "Defines a data table",
  "required": [
    "rows",
    "data-type"
  ],
  "properties": {
    "rows": {
      "$id": "#/properties/rows",
      "type": "array",
      "title": "Table rows",
      "description": "The data row items",
      "items": {
        "$ref": "https://www.jipipe.org/schemas/data-table-row.schema.json"
      }
    },
    "data-type": {
      "$id": "#/properties/data-type",
      "type": "string",
      "title": "Data type",
      "description": "The data type ID behind the row"
    }
  }
}
