{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://applied-systems-biology.github.io/jipipe/schemas/graph.schema.json",
    "type": "object",
    "title": "Algorithm graph",
    "description": "A graph",
    "required": [
        "nodes",
        "edges"
    ],
    "properties": {
        "nodes": {
            "$id": "#/properties/nodes",
            "type": "object",
            "title": "Nodes",
            "description": "The nodes. Keys are the unique algorithm instance IDs.",
            "default": {},
            "examples": [
                {}
            ],
            "additionalProperties": {
              "$ref": "https://applied-systems-biology.github.io/jipipe/schemas/algorithm-node.schema.json"
            }
        },
        "edges": {
            "$id": "#/properties/edges",
            "type": "array",
            "title": "Edges",
            "description": "The edges. IDs in the edge definition must be consistent to the IDs in the 'nodes' entry",
            "default": [],
            "examples": [
                []
            ],
            "items": {
              "$ref": "https://applied-systems-biology.github.io/jipipe/schemas/graph-edge.schema.json"
            }
        }
    }
}
