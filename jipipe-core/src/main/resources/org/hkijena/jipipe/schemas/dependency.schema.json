{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://applied-systems-biology.github.io/jipipe/schemas/dependency.schema.json",
    "type": "object",
    "title": "Dependency",
    "description": "Project or extension dependency. Refers to an JIPipe extension.",
    "required": [
        "metadata",
        "id",
        "version"
    ],
    "properties": {
        "metadata": {
            "$ref": "https://applied-systems-biology.github.io/jipipe/schemas/metadata.schema.json"
        },
        "id": {
            "$id": "#/properties/id",
            "type": "string",
            "title": "ID",
            "description": "Unique ID of this dependency should have format <groupId>.<artifactId>:<extensionId>",
            "default": "",
            "examples": [
                "org.hkijena.jipipe:example"
            ]
        },
        "version": {
            "$id": "#/properties/version",
            "type": "string",
            "title": "Version",
            "description": "Version of this dependency",
            "default": "",
            "examples": [
                "1.0.0"
            ]
        }
    }
}
